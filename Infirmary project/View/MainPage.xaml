<UserControl x:Class="Infirmary_project.View.MainPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:Infirmary_project.View"
             mc:Ignorable="d" 
             FlowDirection="RightToLeft"
             d:DesignHeight="450" d:DesignWidth="800">
    <materialDesign:DialogHost IsOpen="False" CloseOnClickAway="True" Name="dialog" Grid.RowSpan="4">
        <materialDesign:DialogHost.DialogContent>

            <Grid Height="200" Width="300">
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <ToggleButton Grid.Column="0" Foreground="#111834" Grid.Row="0" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10 15 0 0" IsChecked="False"
  Style="{StaticResource MaterialDesignSwitchLightToggleButton}"
  ToolTip="MaterialDesignSwitchLightToggleButton"
  />
                <TextBlock Text="نزلاء" Grid.Column="0" Grid.Row="0" Margin="50 10 0 0" FontSize="18"></TextBlock>
                <StackPanel Orientation="Vertical" Grid.Row="1"  Margin="20 -150 0 0">
                    <CheckBox IsChecked="False">
                        ذكور
                    </CheckBox>
                    <CheckBox IsChecked="False">
                        إناث
                    </CheckBox>
                    <CheckBox IsChecked="False">
                        الحاليين
                    </CheckBox>
                    <CheckBox  IsChecked="False">
                        المغادرين
                    </CheckBox>
                    <CheckBox IsChecked="False">
                        المتوفيين
                    </CheckBox>
                </StackPanel>
                <ToggleButton Grid.Column="1" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0 16 0 0"
  Style="{StaticResource MaterialDesignSwitchLightToggleButton}" Foreground="#111834"
  ToolTip="MaterialDesignSwitchLightToggleButton"
  IsChecked="False" />
                <TextBlock Text="موظفين" Grid.Column="1" Margin="40 10 0  0" FontSize="18"></TextBlock>
                <StackPanel Orientation="Vertical" Grid.Row="1" Grid.Column="1"  Margin="20 -150 0 0">
                    <CheckBox IsChecked="False">
                        ذكور
                    </CheckBox>
                    <CheckBox IsChecked="False">
                        إناث
                    </CheckBox>
                    <CheckBox IsChecked="False">
                        الحاليين
                    </CheckBox>
                    <CheckBox  IsChecked="False">
                        المغادرين
                    </CheckBox>
                    <CheckBox IsChecked="False">
                        نوع الوظيفة
                    </CheckBox>
                </StackPanel>
                <Button Content="موافق" Name="close" Click="Close_Click" Background="#d47e7d" BorderBrush="#d47e7d" Width="100" HorizontalAlignment="Center" VerticalAlignment="Bottom" Grid.ColumnSpan="2" Margin="0 0 0 10"></Button>
            </Grid>

        </materialDesign:DialogHost.DialogContent>
        <ScrollViewer>
        <Grid Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>

            </Grid.RowDefinitions>
            <Grid  Margin="0 10 0 0" Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <materialDesign:ColorZone
        Mode="Standard" 
         HorizontalAlignment="Left" VerticalAlignment="Center"
        CornerRadius="15" Grid.Column="0"
        Panel.ZIndex="1" 
        Background="LightGray"
        Margin="10 0 0 0"
        materialDesign:ShadowAssist.ShadowDepth="Depth1" >
                    <StackPanel   Orientation="Horizontal" >
                        <materialDesign:PackIcon Margin="0 8 7 0"
              Kind="Magnify"
              Opacity=".56"   HorizontalAlignment="Right"/>
                        <TextBox Width="350"  
    Name="SearchEmployee" 
  materialDesign:HintAssist.Hint="بحث"  HorizontalAlignment="Right" Margin="0 0 5 6" />

                    </StackPanel>

                </materialDesign:ColorZone>
                <Button Content="بحث حسب .." Name="open" BorderBrush=" #d47e7d" Click="Open_Click" Background="#d47e7d" Width="150" Margin="0 0 10 0" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center"></Button>
            </Grid>
            <Grid Grid.Row="1" >
                <ItemsControl Name="ListView"  Margin="10">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border CornerRadius="15"  Background="WhiteSmoke"
                BorderBrush="#0E124F" 
                  Height="200" Width=" 200" Margin="8" >
                                <Border.Effect>
                                    <DropShadowEffect  materialDesign:ShadowAssist.ShadowEdges="Left,Top" Color="LightGray"
              materialDesign:ShadowAssist.ShadowDepth="Depth1"   ></DropShadowEffect>
                                </Border.Effect>

                                <StackPanel Margin="0 10 0 0">
                                    <Label  Content="{Binding Name}"  VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="18" FontFamily="/BeFit;component/Font/#Tajawal"></Label>
                                    <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="0" Margin="15 0 0 0">
                                        <Label Content="الرياضة:" FontSize="15" FontFamily="/BeFit;component/Font/#Tajawal"></Label>
                                        <Label Content="{Binding SportName}"></Label>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="0" Margin="15 3 0 0">
                                        <Label Content="الشريحة:" FontSize="15" FontFamily="/BeFit;component/Font/#Tajawal"></Label>
                                        <Label Content="{Binding SectionName}"></Label>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="1" Margin="15 3 0 0">
                                        <Label Content="المدرب:" FontSize="15" FontFamily="/BeFit;component/Font/#Tajawal"></Label>
                                        <Label Content="{Binding FullName}"></Label>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Grid.Row="3" Grid.Column="0" Margin="15 3 0 0">
                                        <Label Content="تاريخ البدء:" FontSize="15" FontFamily="/BeFit;component/Font/#Tajawal"></Label>
                                        <Label Content="{Binding MyProperty,StringFormat=d}"></Label>
                                    </StackPanel>
                                    <StackPanel Grid.Row="4" Grid.Column="1" Orientation="Horizontal" Margin="35 3 0 0">
                                        <Button  
              Height="20"  HorizontalAlignment="Center" VerticalAlignment="Center"
                    Width="60" TabIndex="{Binding Id}"
                 Name="DeleteBtn"  BorderBrush="#F59A3D" 
   Background="#F59A3D">
                                            <Label Content="حذف" Foreground="White" FontFamily="/BeFit;component/Font/#Tajawal"
                                        Margin="-4 -8 -4 -3" 
                FontSize="12"    ></Label>
                                        </Button >
                                        <Button  Margin="15 0 0 0" TabIndex="{Binding Id}"
              Height="20" Name="MigrationBtn" 
                    Width="60"
              BorderBrush="#F59A3D"   
   Background="#F59A3D">
                                            <Label   Margin="-4 -8 -4 -3" FontFamily="/BeFit;component/Font/#Tajawal"
                        Content="ترحيل"
             Foreground="White"
                FontSize="12">
                                            </Label>
                                        </Button >
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel ></WrapPanel>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </Grid>
            <Button x:Name="addPerson" Click="addPerson_Click" Grid.Row="2" HorizontalAlignment="Right"  Margin="4" VerticalAlignment="Bottom"
  Style="{StaticResource MaterialDesignFloatingActionLightButton}" Background="#111834"
  ToolTip="MaterialDesignFloatingActionLightButton">
                <materialDesign:PackIcon Kind="Add" 
            Height="30" Foreground="#d47e7d"
    Width="30" />
            </Button>
        </Grid>
        </ScrollViewer>
    </materialDesign:DialogHost>
</UserControl>

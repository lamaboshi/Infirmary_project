<UserControl x:Class="Infirmary_project.View.AddMaterial.AddReportPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Infirmary_project.View.AddMaterial" xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" >
    <Grid Background="White" Height="400" Width="550">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <StackPanel >
                <materialDesign:ColorZone Background="#111834"
  Padding="16">
                    <TextBlock Foreground="White"
      VerticalAlignment="Center" HorizontalAlignment="Center">
    اضافة تقرير
                    </TextBlock>
                </materialDesign:ColorZone>
                <Grid Margin="12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <ComboBox
  materialDesign:HintAssist.Hint="اسم الموظف"
Grid.Column="0" Margin="15 8"
  VerticalAlignment="Bottom">
                    </ComboBox>
                    <DatePicker
Grid.Column="1" Margin="15 8"
  materialDesign:HintAssist.Hint="تاريخ "
  Style="{StaticResource MaterialDesignFloatingHintDatePicker}" />
                    <ComboBox
  materialDesign:HintAssist.Hint="حالة التقرير"
Grid.Column="2" Margin="15 8"
  VerticalAlignment="Bottom">
                    </ComboBox>
                </Grid>

            </StackPanel>
        </Grid>
        <ScrollViewer  Grid.Row="1">
        <Grid>
            <StackPanel>
                <Separator/>
                <Grid Margin="8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>
                    <ComboBox Name="Mname"
  materialDesign:HintAssist.Hint="اسم المادة"
Grid.Column="0" Margin="15 8"
  VerticalAlignment="Bottom">
                    </ComboBox>
                    <TextBox Name="amountText" Grid.Column="1" Margin="15 8"
  materialDesign:HintAssist.Hint="الكمية"
  Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                    <Button Name="addMat" Click="addMat_Click" Grid.Column="2" Margin="8" Background="#d47e7d"
  Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}"
  ToolTip="MaterialDesignFloatingActionMiniLightButton">
                        <materialDesign:PackIcon
    Kind="Add"
                            Foreground="White"
    Height="24"
    Width="24" />
                    </Button>
                </Grid>
                
                <ListView Name="MListView" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="Focusable" Value="false"/>
                            </Style>
                        </ListView.ItemContainerStyle>
                        <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="8" Width="500">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>

                                <TextBox IsReadOnly="True" Text="{Binding Mname}"  Grid.Column="0" Margin=" 8"
  materialDesign:HintAssist.Hint="اسم المادة"
  Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                                <TextBox IsReadOnly="True" Text="{Binding amount}"  Grid.Column="1" Margin=" 8"
  materialDesign:HintAssist.Hint="الكمية"
  Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                </StackPanel>
        </Grid>
        </ScrollViewer>
        <Button Margin="15" Grid.Row="2" Background="#111834" Foreground="White" HorizontalAlignment="Right"
    Style="{StaticResource MaterialDesignRaisedLightButton}"
    Width="100">
            حفظ
        </Button>
    </Grid>
</UserControl>
